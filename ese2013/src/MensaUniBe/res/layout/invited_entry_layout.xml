<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/invite_list_background"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp" >

    <TextView
        android:id="@+id/from_whom_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/when_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/accept_invitiation" />

    <TextView
        android:id="@+id/where_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/from_whom_text_field" />

    <ImageButton
        android:id="@+id/cancel_invitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/accept_invitiation"
        android:layout_below="@+id/accept_invitiation"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/cancel_request" />

    <ImageButton
        android:id="@+id/accept_invitiation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/when_text_field"
        android:layout_marginRight="14dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/accept_request" />

</RelativeLayout>