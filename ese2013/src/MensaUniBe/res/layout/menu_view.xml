<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/menu_view_title_padding"
        android:paddingLeft="4dp"
        android:paddingRight="@dimen/menu_view_title_padding"
        android:paddingTop="@dimen/menu_view_title_padding"
        android:textColor="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp" >

        <TextView
            android:id="@+id/menu_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="@dimen/menu_desc_vertical_padding"
            android:paddingLeft="@dimen/menu_desc_side_padding"
            android:paddingRight="@dimen/menu_desc_side_padding"
            android:paddingTop="@dimen/menu_desc_vertical_padding" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/menu_description_text"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/menu_rating_count"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:gravity="center"
                android:paddingBottom="@dimen/menu_desc_vertical_padding"
                android:paddingLeft="@dimen/menu_desc_side_padding"
                android:paddingRight="@dimen/menu_desc_side_padding"
                android:paddingTop="@dimen/menu_desc_vertical_padding" />

            <RatingBar
                android:id="@+id/menu_rating_bar"
                style="@style/menuRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:numStars="5"
                android:stepSize="1" />
        </LinearLayout>
    </RelativeLayout>

</merge>