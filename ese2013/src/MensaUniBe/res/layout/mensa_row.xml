<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:layout_marginBottom="6dp"
    android:clickable="true" >
    
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal"
    	android:paddingTop="3dp"
    	android:paddingBottom="3dp">
     
    	<TextView
    	android:id="@+id/mensa_name_view"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:background="@color/light_grey"
    	android:gravity="left|bottom"
    	/>
    	<include layout="@layout/favorite_button"
    	    android:id="@+id/mensa_list_fav_button"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentRight="true"/>
    	 <!--android:src="@drawable/ic_fav"-->
    	<include layout="@layout/map_button"
    	    android:id="@+id/mensa_list_map_button"
    	    android:layout_height="wrap_content"
    	    android:layout_width="wrap_content"
    	    android:layout_toLeftOf="@+id/mensa_list_fav_button"/>
    </RelativeLayout>
    
    <TextView
    android:id="@+id/mensa_adress_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/adress_view_selector"  
    android:clickable="true"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    
     />
    

</LinearLayout>
