<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/invite_list_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/friend_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="10dip"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/delete_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/friend_name"
        android:layout_alignTop="@+id/friend_name"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/delete_friend"
        android:padding="10dip"
        android:src="@drawable/cancel" />

</RelativeLayout>